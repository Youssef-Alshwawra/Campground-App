<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center">New course</h1>
  <div class="col-6 offset-3">
    <form action="/courses" method="POST" novalidate class="validated-form" enctype="multipart/form-data">

      <div class="mb-4">
        <label for="title" class="form-label"> Title </label>
        <input
          class="form-control"
          type="text"
          placeholder="Enter course Title"
          name="title"
          id="title"
          required
          minlength="3"
          maxlength="50"
          pattern="[A-Za-z\u0600-\u06FF ]+"
        />
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Title must be 3â€“50 letters long.
        </div>
      </div>

      <div class="mb-4">
        <label for="price" class="form-label">Price</label>
        <input
          class="form-control"
          type="number"
          name="price"
          id="price"
          placeholder="Enter the price"
          required
          min="0.01"
          max="10000"
          step="0.01"
        />
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Price must be a number greater than 0 and less than 10,000.
        </div>
      </div>
      
      <div class="mb-4">
        <label for="duration" class="form-label">Duration</label>
        <input
          class="form-control"
          type="number"
          name="duration"
          id="duration"
          placeholder="Enter the duration"
          required
          min="1"
          max="1000"
          step="0.5"
        />
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          duration must be a number greater than 1 and less than 1,000.
        </div>
      </div>
      
      <!-- <div class="mb-4">
        <label for="image" class="form-label">Image Url</label>
        <input
          class="form-control"
          type="text"
          name="course[image]"
          id="image"
          placeholder="Put an image"
          required
        />
        <div class="valid-feedback">
          Looks good!
        </div>
      </div> -->

      <div class="mb-3">
        <label for="formFile" class="form-label">Select course Image/s</label>
        <input 
          class="form-control"
          name="course[image]"
          type="file"
          id="formFile"
          multiple>
      </div>

      <div class="form-floating mb-4">
        
        <textarea
          class="form-control"
          id="floatingTextarea2" 
          style="height: 100px"
          name="description"
          placeholder="enter description"
          required
          maxlength="1000"
        ></textarea>
        <label for="floatingTextarea2" class="form-label">description</label>
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Description is Required and cannot exceed 1000 characters.
        </div>
      </div>

      <div class="mb-4">

        <label for="location" class="form-label">Location</label>

        <select name="location" id="location" class="form-select">
          <option value="Online">Online</option>
          <% for(let i = 0; i < 15; i++) { %> <% let location = `${cities[i].city}, ${cities[i].state}` %>
            <option value="<%= location %>"><%= location %> </option>
          <% } %>
        </select>
        
      </div>

      <div class="mb-4">
        <input type="submit" class="btn btn-success" value="Create new course" />
      </div>

    </form>
    <a href="/courses" class="btn btn-secondary">Back to Courses</a>
  </div>
</div>

<script>
  // Example starter JavaScript for disabling form submissions if there are invalid fields
  (() => {
    'use strict'

    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    const forms = document.querySelectorAll('.validated-form')

    // Loop over them and prevent submission
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }

        form.classList.add('was-validated')
      }, false)
    })
  })()
</script>
